{% extends 'base_admin.html.twig' %}

{% block stylesheets %}
  <style>
    .btn{
      width:200px;
    }

  </style>
{% endblock %}
{% block body %}
  <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Jeux</h1>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
 <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <a href="{{path('adminGereJeux', {id: 0})}}" > <button type="button" class="btn btn-primary  btn-lg">Ajouter Jeux</button></a>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Platforme</th>
                    <th>Image</th>
                    <th>Actions</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for jeu in jeux %}
                  <tr>
                    <td>{{jeu.nom}}</td>
                    <td>{{jeu.description}}</td>
                    <td>{{jeu.typePlateforme}}</td>
                    <td><img src="{{asset('images/jeux/')}}{{jeu.image}}" width="100" height="100" /></td>
                    <td>  
                      <a href="{{path('adminGereJeux', {id: jeu.id})}}" > <button type="button" class="btn btn-info   btn-lg" onclick="return confirm('Êtes-vous sûr?')">Modifier</button></a>
                   
                      <a href="{{path('adminSupprimerJeux', {id: jeu.id})}}" > <button type="button" class="btn btn-danger   btn-lg" onclick="return confirm('Êtes-vous sûr?')">Supprimer</button></a>
                     </td>
                  </tr>
                  {% endfor %}
                  {% if jeux|length ==0 %}
                  <tr>
                    <td colspan="10" style="text-align:center">il n'y a pas de jeux</td>
                  </tr>
                  {% endif %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
{% endblock %}
