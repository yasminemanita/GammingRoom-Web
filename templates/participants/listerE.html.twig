{% block body %}

    <!-- Preloader -->
    <div class="page-preloader preloader-wrapp">

        <img src="{{asset('/images/logo.png')}}" alt="">

        <div class="preloader"></div>
    </div>
    <!-- /Preloader -->
    <div class="content-wrap">

    <!--
Banner

Additional classes:
